<div id='socialMedia'>
  <table class="table table-secondary">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Recent Tweets</th>
        <th scope="col">Hashtag(s)</th>
        <th scope="col">Tweet Url</th>
      </tr>
    </thead>
    <tbody>
    <% TwitterApi.twitter_feeds.first(10).each do |tweet| %>
      <tr>
        <th scope="row">#</th>
        <td><%=tweet.text.split('#').first%></td>
        <td><%=tweet.text.split(' ').select { |word| word.start_with?('#') }%></td>
        <td><%=tweet.text.split(' ').last%></td>
      </tr>
    </tbody>
    <% end%>
  </table>
  </div>


